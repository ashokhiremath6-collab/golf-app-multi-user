# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase Configuration (Alternative to direct PostgreSQL)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
SESSION_SECRET=your-super-secret-session-key-min-32-chars
AUTH_WHITELIST=email1@example.com,email2@example.com,email3@example.com

# Replit Auth (if using Replit deployment)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev,another-domain.com

# Application Configuration
NODE_ENV=development
PORT=5000

# Season Configuration
SEASON_END=2026-03-31
K_FACTOR=0.5
CHANGE_CAP=2.0

# Timezone (for cron jobs)
TZ=UTC
